{
    "type": "Microsoft.VirtualMachineImages/imageTemplates",
    "apiVersion": "2020-02-14",
    "location": "canadacentral",
    "dependsOn": [],
    "tags": {
        "imagebuilderTemplate": "AzureVMImageBuilderVNET",
        "userIdentity": "enabled"
            },
        "identity": {
            "type": "UserAssigned",
                    "userAssignedIdentities": {
                    "<imgBuilderId>": {}
                        
                }
                },
    "properties": {

        "buildTimeoutInMinutes" : 80,
        
        "vmProfile": 
            {
            "vmSize": "Standard_D4s_v3",
            "osDiskSizeGB": 128,
            "vnetConfig": {
                "subnetId": "/subscriptions/<subscriptionID>/resourceGroups/<vnetRgName>/providers/Microsoft.Network/virtualNetworks/<vnetName>/subnets/<subnetName>"
                }
            },

        

        "source": {
            "type": "PlatformImage",
                "publisher": "Canonical",
                "offer": "0001-com-ubuntu-server-jammy",
                "sku": "22_04-lts-gen2",
                "version": "1.0.0"
            
        },
        "customize": [
            {
                "type": "Shell",
                "name": "RunScriptFromSource",
                "scriptUri": "https://raw.githubusercontent.com/nelson2000/az-scripts/master/script1.sh"
            },

            {
                "type": "Shell",
                "name": "RunScriptFromSource2",
                "scriptUri": "https://raw.githubusercontent.com/nelson2000/az-scripts/master/script2.sh",
            },
     
         

            {
                "type": "Shell",
                "name": "InstallUpgrades",
                "inline": [
                    "sudo apt install unattended-upgrades -y",
                    "sudo apt update -y"
                ]
            }

        ],
        "distribute": 
            [
                {   "type":"ManagedImage",
                    "imageId": "/subscriptions/<subscriptionID>/resourceGroups/<rgName>/providers/Microsoft.Compute/images/<imageName>",
                    "location": "canadacentral",
                    "runOutputName": "<runOutputName>",
                    "artifactTags": {
                        "source": "azVmImageBuilder",
                        "baseosimg": "Ubuntu2204"
                    }
                }
            ]
        }
    }
